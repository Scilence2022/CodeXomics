{
  "name": "codexomics",
  "version": "0.522.0-beta",
  "description": "An AI-powered bioinformatics analysis platform built with Electron",
  "main": "src/main.js",
  "homepage": "https://github.com/Scilence2022/CodeXomics",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "mcp-server": "node start-mcp-server.js",
    "claude-mcp-server": "node start-claude-mcp-server.js",
    "start-with-mcp": "concurrently \"npm run mcp-server\" \"npm start\"",
    "start-with-claude-mcp": "concurrently \"npm run claude-mcp-server\" \"npm start\"",
    "version-sync": "node scripts/update-version.js",
    "version-validate": "node scripts/validate-versions.js",
    "generate-dmg-bg": "node scripts/generate-dmg-svg.js && node scripts/convert-svg-to-png.js",
    "prebuild": "npm run version-sync && npm run generate-dmg-bg",
    "build": "electron-builder",
    "build:mac": "npm run generate-dmg-bg && electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run generate-dmg-bg && electron-builder --mac --win --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "pack:mac": "npm run generate-dmg-bg && electron-builder --mac --dir",
    "pack:win": "electron-builder --win --dir",
    "pack:linux": "electron-builder --linux --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "bioinformatics",
    "omics",
    "genomics",
    "bioinformatics",
    "electron",
    "genomics",
    "dna",
    "sequence-analysis",
    "artificial-intelligence",
    "machine-learning"
  ],
  "author": {
    "name": "Lifu Song",
    "email": "songlf@tib.cas.cn"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Scilence2022/CodeXomics.git"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "sharp": "^0.34.4"
  },
  "dependencies": {
    "@gmod/bam": "^6.0.4",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "cors": "^2.8.5",
    "css-purge": "^3.1.8",
    "d3": "^7.8.5",
    "express": "^4.21.2",
    "file-saver": "^2.0.5",
    "generic-filehandle2": "^2.0.12",
    "igv": "^2.15.8",
    "js-yaml": "^4.1.0",
    "marked": "^9.1.6",
    "multer": "^2.0.1",
    "ngl": "^2.3.1",
    "papaparse": "^5.4.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.codexomics.app",
    "productName": "CodeXomics",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "tools_registry/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "test_data",
        "to": "test_data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "iconSize": 90,
      "window": {
        "width": 660,
        "height": 420,
        "x": 200,
        "y": 200
      },
      "contents": [
        {
          "x": 180,
          "y": 210,
          "type": "file"
        },
        {
          "x": 480,
          "y": 210,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "background": "build/dmg-background.png",
      "format": "UDZO",
      "writeUpdateInfo": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publisherName": "CodeXomics Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/",
      "category": "Science",
      "synopsis": "AI-powered genome analysis studio",
      "description": "An intelligent and user-friendly genome analysis studio built with Electron, featuring AI-powered search and analysis capabilities. Supports FASTA, GenBank, GFF, BED, VCF, and SAM/BAM files for comprehensive genomic research."
    },
    "snap": {
      "publish": {
        "provider": "snapStore",
        "channels": [
          "edge"
        ]
      }
    }
  }
}
