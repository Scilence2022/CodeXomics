{
  "name": "electron-genome-viewer",
  "version": "1.0.0",
  "description": "A modern genome browser built with Electron",
  "main": "src/main.js",
  "homepage": "https://github.com/Scilence2022/GenomeExplorer",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "mcp-server": "node start-mcp-server.js",
    "start-with-mcp": "concurrently \"npm run mcp-server\" \"npm start\"",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "pack:mac": "electron-builder --mac --dir",
    "pack:win": "electron-builder --win --dir",
    "pack:linux": "electron-builder --linux --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "genome",
    "browser",
    "bioinformatics",
    "electron",
    "genomics",
    "dna",
    "sequence-analysis"
  ],
  "author": {
    "name": "Lifu Song",
    "email": "songlf@tib.cas.cn"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Scilence2022/GenomeExplorer.git"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "file-saver": "^2.0.5",
    "igv": "^2.15.8",
    "papaparse": "^5.4.1",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.1",
    "marked": "^9.1.6"
  },
  "build": {
    "appId": "com.genomeviewer.app",
    "productName": "Genome Viewer",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/.cache/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "sample_data",
        "to": "sample_data",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180,
          "type": "file"
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Genome Viewer Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "${productName}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/",
      "category": "Science",
      "synopsis": "Modern genome browser for sequence analysis",
      "description": "A powerful and user-friendly genome browser built with Electron, supporting FASTA, GenBank, GFF, BED, VCF, and SAM/BAM files for comprehensive genomic analysis."
    },
    "snap": {
      "publish": {
        "provider": "snapStore",
        "channels": ["edge"]
      }
    }
  }
}
