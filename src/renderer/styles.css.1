/* Configure LLMs Modal Styles */

/* LLM Configuration Modal */
.llm-config-modal {
    max-width: 900px;
    width: 95%;
    max-height: 90vh;
    overflow: hidden;
}

.llm-provider-tabs {
    display: flex;
    border-bottom: 2px solid var(--border-color);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    padding: 0 20px;
    gap: 4px;
}

.llm-provider-tabs .tab-button {
    padding: 16px 24px;
    border: none;
    background: transparent;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
    font-weight: 600;
    position: relative;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
    margin-bottom: -2px;
    border-bottom: 3px solid transparent;
}

.llm-provider-tabs .tab-button:hover {
    background: rgba(59, 130, 246, 0.05);
    color: var(--text-primary);
    transform: translateY(-2px);
}

.llm-provider-tabs .tab-button.active {
    background: white;
    color: var(--primary-color);
    border-bottom-color: var(--primary-color);
    box-shadow: 0 -2px 8px rgba(59, 130, 246, 0.15);
}

.llm-provider-tabs .tab-button::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 8px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--border-color);
    transition: all 0.2s ease;
}

.llm-provider-tabs .tab-button.active::before {
    background: var(--success-color);
    box-shadow: 0 0 0 2px rgba(16, 185, 129, 0.2);
}

.llm-provider-tabs .tab-button[data-provider="openai"]::before {
    background: #10a37f;
}

.llm-provider-tabs .tab-button[data-provider="anthropic"]::before {
    background: #d97706;
}

.llm-provider-tabs .tab-button[data-provider="google"]::before {
    background: #4285f4;
}

.llm-provider-tabs .tab-button[data-provider="deepseek"]::before {
    background: #8b5cf6;
}

.llm-provider-tabs .tab-button[data-provider="local"]::before {
    background: #059669;
}

