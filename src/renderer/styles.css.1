/* BLAST Results Styles */
.results-controls {
    display: flex;
    align-items: center;
    gap: 12px;
}

#blastResultsContainer {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.blast-results-summary {
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    padding: 16px;
    border: 1px solid var(--border-color);
}

.blast-results-table {
    background: white;
    border-radius: var(--radius-md);
    border: 1px solid var(--border-color);
    overflow: hidden;
}

.blast-results-table table {
    width: 100%;
    border-collapse: collapse;
}

.blast-results-table th,
.blast-results-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
    font-size: 13px;
}

.blast-results-table th {
    background: var(--bg-secondary);
    font-weight: 600;
    color: var(--text-primary);
    position: sticky;
    top: 0;
    z-index: 1;
}

.blast-results-table tbody tr:hover {
    background: var(--bg-tertiary);
}

.blast-hit-row {
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.blast-hit-row:hover {
    background: rgba(59, 130, 246, 0.05);
}

.blast-hit-row.selected {
    background: rgba(59, 130, 246, 0.1);
    border-left: 3px solid var(--primary-color);
}

/* Alignment Details */
.alignment-details {
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    padding: 16px;
    margin-top: 8px;
    font-family: 'Courier New', monospace;
    font-size: 12px;
    overflow-x: auto;
}

.alignment-header {
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-primary);
}

.alignment-sequence {
    line-height: 1.6;
    margin: 4px 0;
}

.alignment-query {
    color: #2563eb;
}

.alignment-match {
    color: #059669;
}

.alignment-subject {
    color: #dc2626;
}

/* No Results Message */
.no-blast-results {
    text-align: center;
    padding: 40px 20px;
    color: var(--text-muted);
    background: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border: 1px dashed var(--border-color);
}

.no-blast-results i {
    font-size: 48px;
    margin-bottom: 16px;
    opacity: 0.5;
}

/* Loading States */
.blast-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40px 20px;
    text-align: center;
}

.blast-loading .spinner {
    width: 40px;
    height: 40px;
    margin-bottom: 16px;
}

.blast-progress {
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    padding: 16px;
    margin-bottom: 16px;
}

.blast-progress-bar {
    background: var(--bg-tertiary);
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 8px;
}

.blast-progress-fill {
    background: var(--primary-color);
    height: 100%;
    transition: width 0.3s ease;
    border-radius: 4px;
}

.blast-progress-text {
    font-size: 13px;
    color: var(--text-secondary);
    text-align: center;
}

/* Responsive Design for BLAST */
@media (max-width: 768px) {
    .blast-modal-content {
        width: 98%;
        margin: 10px;
    }
    
    .blast-type-tabs {
        grid-template-columns: 1fr 1fr;
    }
    
    .service-tabs {
        grid-template-columns: 1fr;
    }
    
    .parameters-grid {
