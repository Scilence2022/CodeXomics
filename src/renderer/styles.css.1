    overflow: hidden;
}

/* Disable transitions during splitter resizing to prevent jumping */
.track-splitter.resizing ~ .gene-track .track-content,
.track-splitter.resizing ~ .sequence-track .track-content,
.track-splitter.resizing ~ .gc-track .track-content,
.track-splitter.resizing ~ .reads-track .track-content,
.track-splitter.resizing ~ .variant-track .track-content,
.track-splitter.resizing ~ .protein-track .track-content,
.track-splitter.resizing + .gene-track .track-content,
.track-splitter.resizing + .sequence-track .track-content,
.track-splitter.resizing + .gc-track .track-content,
.track-splitter.resizing + .reads-track .track-content,
.track-splitter.resizing + .variant-track .track-content,
.track-splitter.resizing + .protein-track .track-content {
