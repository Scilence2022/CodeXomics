.db-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
}

.db-name {
    font-weight: 600;
    color: var(--text-primary);
}

.db-details {
    font-size: 12px;
    color: var(--text-secondary);
}

.db-actions {
    display: flex;
    gap: 8px;
}

.db-actions .btn {
