/* Track Splitters */
.track-splitter {
    height: 8px;
    background: linear-gradient(to bottom, #e9ecef, #dee2e6, #e9ecef);
    cursor: row-resize;
    position: relative;
    border-top: 1px solid #ced4da;
    border-bottom: 1px solid #ced4da;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    user-select: none;
    margin: 2px 0;
}

.track-splitter:hover {
    background: linear-gradient(to bottom, #dee2e6, #ced4da, #dee2e6);
    height: 10px;
    margin: 1px 0;
}

.track-splitter.resizing {
    background: linear-gradient(to bottom, #ced4da, #adb5bd, #ced4da);
    height: 10px;
    margin: 1px 0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    transition: none !important; /* Disable transitions during resizing */
}

.track-splitter-handle {
    color: #6c757d;
    font-size: 12px;
    font-weight: bold;
    opacity: 0.6;
    transition: all 0.2s ease;
    pointer-events: none;
    letter-spacing: 2px;
    position: relative;
}

.track-splitter:hover .track-splitter-handle {
    opacity: 1;
    color: #495057;
    font-size: 14px;
}

.track-splitter.resizing .track-splitter-handle {
    opacity: 1;
    color: #343a40;
    font-size: 14px;
}

.track-splitter:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
    background: linear-gradient(to bottom, #dee2e6, #ced4da, #dee2e6);
}

.track-splitter:focus .track-splitter-handle {
    color: var(--primary-color);
    opacity: 1;
}

/* Double-click hint tooltip */
.track-splitter::after {
    content: 'Double-click to auto-adjust';
    position: absolute;
    top: -35px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 11px;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
    z-index: 1000;
}

.track-splitter:hover::after {
    opacity: 1;
}

/* Auto-adjust animation effect */
.track-splitter.auto-adjusting {
    background: linear-gradient(to bottom, #28a745, #20c997, #28a745);
    box-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
}

.track-splitter.auto-adjusting .track-splitter-handle {
    color: white;
    opacity: 1;
    animation: pulse 0.3s ease;
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.2); }
    100% { transform: scale(1); }
}

/* Track content height adjustments for splitter functionality */
.gene-track .track-content,
.sequence-track .track-content,
.gc-track .track-content,
.reads-track .track-content,
.variant-track .track-content,
.protein-track .track-content {
