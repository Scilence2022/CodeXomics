    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    min-width: 320px;
    z-index: 1000;
    overflow: hidden;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    animation: dropdownFadeIn 0.2s ease;
}

@keyframes dropdownFadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.dropdown-section {
    padding: 16px;
}

.dropdown-section:not(:last-child) {
    border-bottom: 1px solid var(--border-color);
}

.dropdown-section-title {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
    font-size: 14px;
    font-weight: 600;
    color: var(--text-primary);
    padding: 8px 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.dropdown-section-title i {
    font-size: 16px;
    color: var(--primary-color);
    background: rgba(59, 130, 246, 0.1);
    padding: 6px;
    border-radius: var(--radius-sm);
}

.dropdown-feature-btn {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
    padding: 12px 16px;
    border: none;
    background: transparent;
    color: var(--text-secondary);
    text-align: left;
    cursor: pointer;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    font-size: 14px;
    margin-bottom: 4px;
    position: relative;
}

.dropdown-feature-btn:hover {
    background: var(--bg-secondary);
    color: var(--text-primary);
    transform: translateX(4px);
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.15);
}

.dropdown-feature-btn:active {
    background: rgba(59, 130, 246, 0.1);
    color: var(--primary-color);
    transform: translateX(2px);
}

.dropdown-feature-btn i {
    width: 20px;
    text-align: center;
    font-size: 16px;
    transition: all 0.2s ease;
}

.dropdown-feature-btn:hover i {
    color: var(--primary-color);
    transform: scale(1.1);
}

/* Feature type specific icons and colors */
.dropdown-feature-btn[data-type="gene"] i {
    color: #10b981;
}

.dropdown-feature-btn[data-type="CDS"] i {
    color: #3b82f6;
}

.dropdown-feature-btn[data-type="mRNA"] i {
    color: #8b5cf6;
}

.dropdown-feature-btn[data-type="rRNA"] i {
    color: #f59e0b;
}

.dropdown-feature-btn[data-type="tRNA"] i {
    color: #06b6d4;
}

.dropdown-feature-btn[data-type="promoter"] i {
    color: #ef4444;
}

.dropdown-feature-btn[data-type="terminator"] i {
    color: #f97316;
}

.dropdown-feature-btn[data-type="regulatory"] i {
    color: #8b5cf6;
}

.dropdown-feature-btn[data-type="misc_feature"] i {
    color: #6b7280;
}

.dropdown-feature-btn[data-type="repeat_region"] i {
    color: #84cc16;
}

.dropdown-feature-btn[data-type="comment"] i {
    color: #64748b;
}

.dropdown-feature-btn::after {
    content: '';
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--primary-color);
    opacity: 0;
    transition: all 0.2s ease;
}

.dropdown-feature-btn:hover::after {
    opacity: 1;
    transform: translateY(-50%) scale(1.2);
}

/* Enhanced Add Features Button */
#addFeaturesBtn {
    position: relative;
    overflow: hidden;
}

#addFeaturesBtn.active {
    background: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

#addFeaturesBtn.active::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.2) 50%, transparent 70%);
    animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
    0% {
        transform: translateX(-100%);
    }
    100% {
        transform: translateX(100%);
    }
}

#addFeaturesBtn i {
    transition: transform 0.2s ease;
}

#addFeaturesBtn.active i {
    transform: rotate(45deg);
}

/* Responsive adjustments for Add Features dropdown */
@media (max-width: 768px) {
    .add-features-dropdown {
        min-width: 280px;
        left: -100px;
    }
    
    .dropdown-section {
        padding: 12px;
    }
    
    .dropdown-feature-btn {
        padding: 10px 12px;
        font-size: 13px;
    }
    
    .dropdown-section-title {
        font-size: 12px;
        margin-bottom: 8px;
    }
}

/* Dark mode support for configuration modals */
@media (prefers-color-scheme: dark) {
    .llm-config-modal,
    .mcp-servers-section,
    .mcp-global-settings,
    .mcp-connection-status {
        background: #1f2937;
        border-color: #374151;
    }
    
    .llm-provider-tabs {
        background: #111827;
    }
    
    .llm-provider-tabs .tab-button.active {
        background: #1f2937;
    }
    
    .provider-config {
        background: #1f2937;
    }
    
    .llm-config-status {
        background: #111827;
        border-color: #374151;
    }
    
    .server-item,
    .connection-stat,
    .tool-item {
        background: #374151;
        border-color: #4b5563;
    }
    
    .server-item:hover,
    .tool-item:hover {
        background: #4b5563;
    }
    
    .add-features-dropdown {
        background: #1f2937;
        border-color: #374151;
    }
    
    .dropdown-feature-btn:hover {
        background: #374151;
    }
    
    .mcp-info {
        background: rgba(59, 130, 246, 0.1);
        border-color: rgba(59, 130, 246, 0.3);
    }
}
